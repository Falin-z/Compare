  <view class="product_list">
    <view wx:for="{{List}}" wx:key="index" wx:for-index="key">
      <view  class='product' data-index='{{key}}'>
        <image src="{{item.img}}" class="product_img"></image>
      <view class="product_content">
        <view style="height:180rpx; display:flex; flex-direction:column;">
          <text>{{item.title}}</text>
          <text class="content">颜色：{{item.color}}  尺寸：{{item.size}}</text>
        </view>
        <view class="gray_price">
          <text class="sign">¥</text>
          <text style="text-decoration:line-through">{{item.price}}</text>
          <view class="red_price">
            <text class="sign">¥</text>
            <text class="price">{{item.new_price}}</text>
          </view>
        </view>
      </view>
      </view>
    </view>
  </view>
