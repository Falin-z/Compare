.container{
  height: 1200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.Bar{
  display: flex;
  flex-direction: row;
  margin: 0rpx 10rpx 0rpx 10rpx;
  align-items: center;
  font-size: 35rpx;
}
.Red{
  color: red;
  margin: 10rpx;
}
input{
  background-color: #F0F0F0;
  border: 30rpx solid #F0F0F0;
  width: 95%;
  font-size: 35rpx;
}
.detail{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: relative;
}
.submit{
  color: white;
  background-color: #3883FA;
  margin: 30rpx;
}
.location{
  background-color: #F0F0F0;
  height: 104.8rpx;
  width:380rpx;
  position: relative;
}
.Location_but{
  font-size:30rpx;
  height:104.8rpx;
  display: table;  
}
.Location_but text{               
  vertical-align:middle;   
  display: table-cell;      
}